<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:background="?attr/colorBackground"
    style="@style/Base.Theme.pinAD_fe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/btnQrScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR 스캔하기"
            android:layout_marginTop="16dp"
            android:layout_gravity="right" />

        <!-- 프로필 이미지 -->
        <ImageView
            android:id="@+id/imgProfilePicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:background="?attr/colorBackground"
            android:src="@drawable/ic_default_profile"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:contentDescription="Profile Picture"/>

        <!-- 사용자 닉네임 -->
        <TextView
            android:id="@+id/tvUserNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nickname"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="?attr/textColorPrimary"/>

        <!-- 사용자 이메일 -->
        <TextView
            android:id="@+id/tvUserGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="?attr/textColorSecondary"/>

        <!-- 플랜 선택과 친구 초대하기 버튼을 가로로 정렬 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnSelectPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="플랜 선택"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnInviteFriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="친구 초대"
                android:layout_marginEnd="8dp"/>

            <!-- 내 쿠폰함 버튼 -->
            <Button
                android:id="@+id/btnCouponBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 쿠폰함" />
        </LinearLayout>

        <!-- 관심사 표시 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Interests"
                android:textSize="16sp"
                android:textColor="?attr/textColorPrimary"/>

            <TextView
                android:id="@+id/tvInterests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travel, Hiking"
                android:textColor="?attr/textColorPrimary"/>
        </LinearLayout>

        <!-- 포인트 표시 및 충전 -->
        <LinearLayout
            android:id="@+id/PointSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Points"
                android:textSize="16sp"
                android:textColor="?attr/textColorPrimary"/>

            <TextView
                android:id="@+id/tvPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textColor="?attr/textColorPrimary"/>

            <Button
                android:id="@+id/btnChargePoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charge"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="설정"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
