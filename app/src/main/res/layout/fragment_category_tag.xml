<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    tools:context=".AddPin.Category.CategoryTagFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/tv_interests_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Interests"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/textColorPrimary"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/textColorPrimary"/>

        <EditText
            android:id="@+id/et_add_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type a new tag..."
            android:padding="12dp"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/textColorPrimary"
            android:textColorHint="?attr/textColorPrimary"/>

        <Button
            android:id="@+id/btn_add_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Tag"
            android:textSize="16sp"
            android:background="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary"
            android:paddingVertical="12dp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</FrameLayout>
