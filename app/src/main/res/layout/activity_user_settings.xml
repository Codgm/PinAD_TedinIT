<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_setting.UserSettingsActivity">

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnPrevious"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Page 1: Nickname -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임을 입력해주세요"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etNickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="닉네임"/>
        </LinearLayout>

        <!-- Page 2: Gender -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별을 선택해주세요"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <RadioGroup
                android:id="@+id/radioGroupGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남성"/>

                <RadioButton
                    android:id="@+id/radioFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여성"/>

                <RadioButton
                    android:id="@+id/radioOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기타"/>
            </RadioGroup>
        </LinearLayout>

        <!-- Page 3: Age -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연령대를 선택해주세요"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <RadioGroup
                android:id="@+id/radioGroupAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio10s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10대"/>

                <RadioButton
                    android:id="@+id/radio20s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20대"/>

                <RadioButton
                    android:id="@+id/radio30s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30대"/>

                <RadioButton
                    android:id="@+id/radio40s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40대"/>

                <RadioButton
                    android:id="@+id/radio50sPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50대 이상"/>
            </RadioGroup>
        </LinearLayout>

        <!-- 프로필 사진 업로드 레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필 사진 업로드"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <ImageView
                android:id="@+id/imageViewProfilePhoto"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/btnUploadProfilePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 선택"
                android:layout_marginTop="16dp"/>

        </LinearLayout>

        <!-- Page 5: 관심 쇼핑 품목 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관심있는 쇼핑 품목을 선택해주세요"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupShoppingInterests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="패션"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="뷰티"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전자기기"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스포츠"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="음식"
                    android:checkable="true"/>
            </com.google.android.material.chip.ChipGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <EditText
                    android:id="@+id/etAddShoppingInterest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="새로운 쇼핑 품목 추가"/>

                <Button
                    android:id="@+id/btnAddShoppingInterest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추가"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Page 6: Shopping Regions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주로 쇼핑하는 지역을 선택해주세요"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupShoppingAreas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서울"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="부산"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대구"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="광주"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인천"
                    android:checkable="true"/>
            </com.google.android.material.chip.ChipGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <EditText
                    android:id="@+id/etAddShoppingArea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="새로운 지역 추가"/>

                <Button
                    android:id="@+id/btnAddShoppingArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추가"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Page 6: Preferred Brands -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선호하는 브랜드를 선택해주세요"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupPreferredBrands"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나이키"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아디다스"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="삼성"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LG"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="애플"
                    android:checkable="true"/>
            </com.google.android.material.chip.ChipGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <EditText
                    android:id="@+id/etAddBrand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="새로운 브랜드 추가"/>

                <Button
                    android:id="@+id/btnAddBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추가"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 쇼핑 중요 요소 선택 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쇼핑 시 중요 요소를 선택해주세요"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupImportance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="품질"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="디자인"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="브랜드"
                    android:checkable="true"/>
            </com.google.android.material.chip.ChipGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <EditText
                    android:id="@+id/etAddPriority"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="새로운 중요요소 추가"/>

                <Button
                    android:id="@+id/btnAddPriority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추가"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 관심사 선택 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관심사를 선택해주세요"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/chipGroupImportance"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupHobbiesInterests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:singleSelection="false"
                app:layout_constraintTop_toBottomOf="@+id/chipGroupImportance">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="운동"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="음악"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여행"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="요리"
                    android:checkable="true"/>
            </com.google.android.material.chip.ChipGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <EditText
                    android:id="@+id/etAddHobby"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="새로운 관심사 및 취미 추가"/>

                <Button
                    android:id="@+id/btnAddHobby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추가"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 선호하는 오프라인 쇼핑 시간대 선택 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선호하는 오프라인 쇼핑 시간대를 선택해주세요"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/chipGroupInterests"/>

            <RadioGroup
                android:id="@+id/radioGroupShoppingTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/chipGroupInterests"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/radioMorning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오전"/>

                <RadioButton
                    android:id="@+id/radioAfternoon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오후"/>

                <RadioButton
                    android:id="@+id/radioEvening"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="저녁"/>

                <RadioButton
                    android:id="@+id/radioNight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="야간"/>

                <RadioButton
                    android:id="@+id/radioAnyTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제한없음"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 푸시 알림 수신 반경 선택 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="푸시 알림 수신 반경을 선택해주세요"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/radioGroupShoppingTime"/>

            <RadioGroup
                android:id="@+id/radioGroupNotificationRadius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioButton100m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100m" />

                <RadioButton
                    android:id="@+id/radioButton200m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200m" />

                <RadioButton
                    android:id="@+id/radioButton500m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500m" />

                <RadioButton
                    android:id="@+id/radioButton1km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1km" />

                <RadioButton
                    android:id="@+id/radioButton2km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2km" />

                <RadioButton
                    android:id="@+id/radioButtonUnlimited"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="무제한" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 하루 최대 푸시 알림 개수 선택 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="하루 최대 푸시 알림 개수를 선택해주세요"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/spinnerNotificationRadius"/>

            <RadioGroup
                android:id="@+id/radioGroupMaxNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1개" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3개" />

                <RadioButton
                    android:id="@+id/radioButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5개" />

                <RadioButton
                    android:id="@+id/radioButton10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10개" />

                <RadioButton
                    android:id="@+id/radioButtonAny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제한 없음" />
            </RadioGroup>
        </LinearLayout>

