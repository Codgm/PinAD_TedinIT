<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Clicked state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Background color when pressed -->
            <stroke android:width="2dp" android:color="#000000"/> <!-- Border color -->
            <corners android:radius="4dp"/> <!-- Rounded corners -->
            <padding android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp"/>
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Background color -->
            <stroke android:width="2dp" android:color="#000000"/> <!-- Border color -->
            <corners android:radius="4dp"/> <!-- Rounded corners -->
            <padding android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp"/>
        </shape>
    </item>
</selector>
