<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="@color/backgroundLight">

    <!-- 상단 여백을 위한 Space -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- 기능 이미지 -->
    <ImageView
        android:id="@+id/ivFeature"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:contentDescription="@string/onboarding_image"
        android:layout_marginBottom="32dp"
        android:scaleType="fitCenter"/>

    <!-- 기능 제목 -->
    <TextView
        android:id="@+id/tvFeatureTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryVariant"
        android:layout_marginBottom="16dp"
        android:text="@string/feature_title" />

    <!-- 기능 설명 -->
    <TextView
        android:id="@+id/tvFeatureDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorTextPrimaryLight"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="24dp"
        android:text="@string/feature_description" />

    <!-- 페이지 인디케이터 -->
    <TextView
        android:id="@+id/tvPageIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorSecondaryVariant"
        android:layout_marginTop="16dp"
        android:text="@string/page_indicator" />

    <!-- 하단 여백을 위한 Space -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>